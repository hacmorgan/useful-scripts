#/bin/bash

# Script for auto installing most of the useful stuff in a new system, then setting up git
# Make sure to run sudo pacman -Syyu beforehand

# Install packages
sudo pacman -S --noconfirm fish fortune-mod feh vim neovim htop glances gimp terminator
sudo pacman -S --noconfirm i3-gaps xorg xorg-server xorg-xinit dmenu i3status

# Config git
git config --global user.email "ham430@gmail.com"
git config --global user.name "hacmorgan"

# Config vim
echo set number >> ~/.vimrc
echo filetype plugin indent on >> ~/.vimrc
echo set shiftwidth=4 >> ~/.vimrc
echo set tabstop=4 >> ~/.vimrc

# Set fish as default shell
chsh hamish -s `which fish`

# Symlink the i3 config
mkdir -p /home/hamish/.config/i3
ln -s /home/hamish/src/useful-scripts/arch-desktop/i3/config /home/hamish/.config/i3/config

# Symlink the fish configs
mkdir -p /home/hamish/.config/fish/functions
ln -s /home/hamish/src/useful-scripts/arch-desktop/fish/config.fish /home/hamish/.config/fish/config.fish
ln -s /home/hamish/src/useful-scripts/arch-desktop/fish/functions/fish_greeting.fish /home/hamish/.config/fish/functions/fish_greeting.fish
ln -s /home/hamish/src/useful-scripts/arch-desktop/fish/functions/fish_prompt.fish /home/hamish/.config/fish/functions/fish_prompt.fish

